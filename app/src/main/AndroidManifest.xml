<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="indonesia.asperindo.com.asperindo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="indonesia.asperindo.com.asperindo.request.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logoasperindo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logoasperindo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="indonesia.asperindo.com.asperindo.activity.TentangActivity"></activity>
        <activity android:name="indonesia.asperindo.com.asperindo.activity.ProfileUser" />
        <activity android:name="indonesia.asperindo.com.asperindo.activity.ChatActivity" />
        <activity android:name="indonesia.asperindo.com.asperindo.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="indonesia.asperindo.com.asperindo.activity.EventActivity" />
        <activity android:name="indonesia.asperindo.com.asperindo.activity.DetailEvent" />
        <activity android:name="indonesia.asperindo.com.asperindo.activity.HomeActivity" />
        <activity android:name="indonesia.asperindo.com.asperindo.activity.DetailArtikel" />
        <activity android:name="indonesia.asperindo.com.asperindo.activity.ArtikelActivity" />
        <activity
            android:name="indonesia.asperindo.com.asperindo.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCx651xXA4TeK_0VMkTLbtPciMouSJiK6E" />

        <activity android:name="indonesia.asperindo.com.asperindo.activity.ProfileActivity" />
    </application>

</manifest>