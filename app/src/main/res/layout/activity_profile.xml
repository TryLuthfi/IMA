<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:background="#c75435"
        android:id="@+id/satu"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="username"
                android:id="@+id/username"
                android:layout_marginLeft="-10dp"
                android:gravity="center"
                android:textColor="#312d2b"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/dua"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/satu"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_profile"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/tiga"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#f1ecec"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/dua"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:background="@null"
                android:textColor="#c23c1b"
                android:id="@+id/btn_fragment1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="MAPS"
                android:layout_height="wrap_content" />
            <Button
                android:textColor="#c23c1b"
                android:background="@null"
                android:id="@+id/btn_fragment2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="PROFIL"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_below="@id/tiga"
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>